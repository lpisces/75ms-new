= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#有{@user.errors.count}个错误"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :is_admin
    = f.check_box :is_admin
  .actions
    = f.submit '保存'
